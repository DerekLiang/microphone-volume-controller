<Controls:MetroWindow x:Class="VolumeControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        ShowMinButton="False" ShowMaxRestoreButton="False"   
        
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
                      
        Title="{ Binding MicrophoneLevel, StringFormat={}Micophone Volume - {0}%}" Height="66" Width="538" MinHeight="66" MaxHeight="66" Activated="MetroWindow_Activated" Deactivated="MetroWindow_Deactivated">
    <Grid>
        <Slider Orientation="Horizontal" 
            Value="{Binding MicrophoneLevel, Mode=TwoWay}" 
            Maximum="100"
            Margin="5" />
    </Grid>
</Controls:MetroWindow>
